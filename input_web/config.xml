<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
    	xmlns:android="http://schemas.android.com/apk/res/android"
        id          = "com.haramaty.zvika.milon"
        version     = "1.1.1" >


    <!-- 5.10.16 -
    The following plugin creates only ARM APKs
    which fails with Intel CPUs
    Looking for alternatives...
    -->
    <!-- This uses Intel's Crosswalk HTML engine instead of default WebView, which behaves differently on each device -->
	<!-- follow this: https://forums.adobe.com/thread/2115661 -->
    <!--plugin name="org.crosswalk.engine" spec="1.3.0" source="pgb" /-->

    <!-- 5.10.16 -->
    <!--<plugin name="cordova-plugin-crosswalk-webview" source="npm" version="1.7.0" />-->
    <plugin name="cordova-plugin-crosswalk-webview" source="npm" version="2.3.0" />
    <preference name="xwalkMultipleApk" value="true" />
    <plugin name="cordova-build-architecture" spec="https://github.com/MBuchalik/cordova-build-architecture.git#v1.0.1" source="git" />
    <preference name="android-versionCode" value="UPDATED_BY_SCRIPT_VERSION_CODE" />

    <!--UPDATED_BY_SCRIPT preference name="buildArchitecture" value="x86" /UPDATED_BY_SCRIPT-->





    <!-- This was a trial, currently not used, left here for future reference -->
    <!-- versionCode is optional and Android only -->
    <!--gap:plugin name="cordova-plugin-appversion" source="npm"/-->

    <!-- This allows clicking on mails addresses to work -->
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <allow-intent href="mailto:*" />
    <access origin="mailto:*" launch-external="yes"/>

    <name>מילון הראיה</name>
	
	<icon src="icon.png" />

    <description>
    </description>

    <author href="https://build.phonegap.com" email="haramaty.zvika@gmail.com">
        Zvika Haramaty
    </author>

    <platform name="android" />
    <!--platform name="ios" /-->

    <preference name="loadUrlTimeoutValue" value="700000" />

    <preference name="permissions" value="none"/>

    <gap:config-file platform="android" parent="/manifest/application">
        <activity android:launchMode="singleTop" />
    </gap:config-file>

    <gap:config-file platform="android" parent="/manifest">
         <!--<application android:debuggable="true" />-->
    </gap:config-file>


</widget>